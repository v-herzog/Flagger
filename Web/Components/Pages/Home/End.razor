@using Flagger.Application.Entities
@using Flagger.Application.Interfaces

@inject IGameService gameService

<div>
    <h3>Oh no :(</h3>
    <h3>That was @game.CurrentStage.Country.Name</h3>

    <p>Your score was @game.Score</p>

    <button type="button" class="btn btn-success" @onclick="OnNewGame">NEW GAME</button>
</div>

@code {
    [Parameter]
    public Func<Task> OnNewGame { get; set; }

    private Game game;

    protected override void OnInitialized() => this.game = gameService.Get();
}